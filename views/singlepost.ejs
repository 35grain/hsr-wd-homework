<%- include('../partials/head.ejs') %>

<body>
    <%- include('../partials/navigation.ejs') %>
    <div class="container">
        <div class="feed">
            <div class="userPost">
                <div class="userPostHeader">
                    <div>
                        <% if (post.authorProfilePicture) { %>
                        <img src="<%= post.authorProfilePicture %>" alt="Profile picture">
                        <% } else { %>
                        <img src="/assets/img/defaultUser.png" alt="Profile picture">
                        <% } %>
                        <p><%= post.authorUsername %></p>
                    </div>
                    <p><%= post.date %></p>
                </div>
                <div class="userPostContent">
                    <% if (post.cover) { %>
                    <img src="<%= post.cover %>" alt="Post picture">
                    <% } %>
                    <p><%= post.body %></p>
                    <button class="btn" type="button" name="like">üëç</button>
                    <span><%= post.likes %></span>
                </div>
            </div>
            <button class="btn" type="button" name="delete" data-del="<%= post.id %>">Delete</button>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>
</body>

</html>

<script>
    const delreq = document.querySelector('[name="delete"]');
    delreq.addEventListener('click', (e) => {
        const endpoint = `/posts/${delreq.dataset.del}`;
        fetch(endpoint, {
            method: 'DELETE',
        }).then(window.location.href = '/posts')
    });
</script>